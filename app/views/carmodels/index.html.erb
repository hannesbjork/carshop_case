<div class="container">
	<p id="notice"><%= notice %></p>

	<h1>Car models</h1>

	<table class="table">
	  <thead>
		<tr>
		  <th scope="col">Brand</th>
		  <th scope="col">Model</th>
		  <th scope="col">Price</th>
		  <th colspan="3"></th>
		</tr>
	  </thead>

	  <tbody>
		<% @carmodels.each do |carmodel| %>
		  <tr>
		  	<td scope="row"><%= carmodel.brand %></td>
		    <td><%= carmodel.model %></td>
		    <td><%= carmodel.price %></td>
		    
		    <% if auth_level == 2 %>
		    	<td><%= link_to 'Show', carmodel %></td>
		    	<td><%= link_to 'Edit', edit_carmodel_path(carmodel) %></td>
		    	<td><%= link_to 'Destroy', carmodel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		    <% end %>
		  </tr>
		<% end %>
	  </tbody>
	</table>

	<br>
	<% if auth_level == 2  %>
		<%= link_to 'New Car model', new_carmodel_path %>
	<% end %>
</div>
