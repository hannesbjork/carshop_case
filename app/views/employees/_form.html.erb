<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :name %>
    <%= form.select :user_id, User.all.collect { |x| [x.name, x.id]}, {:include_blank => "Please Select"} %>
  </div>
  
  <div class="field">
    <%= form.label :Authentication_level %>
    <%= form.select :auth_level, [["General", 1], ["Admin", 2]], {:include_blank => "Please Select"} %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
